        </div>
    </section>

    <section>
        <h3>Horaires du Coquelicot</h3>
        <div class="schedule-container">
            <img src="" alt="Image de la devanture du Coquelicot">
            <div class="schedule-info">
                <div>
                    <p>Mercredi</p>
                    <p>17:00 / 00:00</p>
                </div>
                <div>
                    <p>Jeudi</p>
                    <p>17:00 / 01:00</p>
                </div>
                <div>
                    <p>Vendredi</p>
                    <p>17:00 / 03:00</p>
                </div>
                <div>
                    <p>Samedi</p>
                    <p>17:00 / 03:00</p>
                </div>
            </div>
        </div>
    </section>

    <section>
        <h3>Nous contacter</h3>
        <form action="index.php?route=envoi-message" method="post" novalidate>
            <div class="contact-input-container">
                <div class="firstname-contact-input">
                    <label for="firstName">Prénom<span>*</span></label>
                    <input type="text" id="firstName" name="firstName" required>
                </div>
                <div class="lastname-contact-input">
                    <label for="lastName">Nom<span>*</span></label>
                    <input type="text" id="lastName" name="lastName" required>
                </div>
            </div>

            <div class="contact-input-container">
                <div class="email-contact-input">
            <label for="email">Adresse mail<span>*</span></label>
            <input type="email" id="email" name="email" required>
                </div>
                <div class="phone-contact-input">
                    <label for="phone">Téléphone</label>
                    <input type="tel" id="phone" name="phone" pattern="^0[1-9]{1}[0-9]{8}$">
                </div>
            </div>

            <label for="subject">Sujet<span>*</span></label>
            <input type="text" id="subject" name="subject" required>

            <label for="message">Message<span>*</span></label>
            <textarea id="message" name="message" required></textarea>

            <input type="submit" name="orange" value="Envoyer">

            <p id="message"></p>
        </form>
    </section>
</main>
{% endblock %}