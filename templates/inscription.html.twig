{% extends "layout.html.twig" %}

{% block description %}
Page d'inscription pour les artistes et professionnels du spectacle. Accédez à l'espace artiste et pro sur le site du Coquelicot, café-concert associatif à Fougères.
{% endblock %}

{% block title %}
S'inscrire
{% endblock %}

{% block main %}
<main id="inscription">
    <section>
        <h2>Inscription</h2>
        
        {% if session.error_message is not null %}
            <div class="alert" role="alert">
                <p>{{ session.error_message|e }}</p>
                <i class="fa-solid fa-xmark" aria-hidden="true"></i>
            </div>
        {% endif %}
        <form action="index.php?route=check-register" method="post">
            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ session.csrf_token|e }}">
            
            <label for="first-name">Prénom</label>
            <input type="text" name="first-name" id="first-name" required aria-required="true">
            
            <label for="last-name">Nom</label>
            <input type="text" name="last-name" id="last-name" required aria-required="true">
           
            <label for="role">Artiste / Professionnel du spectacle</label>
            <select name="role" id="role" required aria-required="true">
                <option value="">Sélectionnez votre métier</option>
                <option value="ARTISTE">Artiste</option>
                <option value="PRO">Professionnel du spectacle</option>
            </select>
            
            <label for="specialization">Compétence</label>
            <select name="specialization" id="specialization" required aria-required="true">
                <option value="">Sélectionnez une spécialisation</option>
                <!-- Les options sont ajoutées ici par JavaScript -->
            </select>
           
            <label for="structure">Structure</label>
            <input type="text" name="structure" id="structure" required aria-required="true" />
            
            <label for="email">Adresse mail</label>
            <input type="email" name="email" id="email" required aria-required="true">
           
            <label for="password">Mot de passe</label>
            <div class="password-container">
                <input type="password" class="password" name="password" id="password" required aria-required="true">
                <span class="eyes">
                    <i class="fas fa-eye-slash eyesImag"></i>
                </span>
            </div>

            <label for="confirm-password">Confirmer le mot de passe</label>
            <div class="password-container">
                <input type="password" class="password" name="confirm-password" id="confirm-password" required aria-required="true">
                <span class="eyes">
                    <i class="fas fa-eye-slash eyesImag"></i>
                </span>
            </div>
           
            <button type="submit" class="submit-button">S'inscrire</button>
        </form>
        <p>Vous avez déjà un compte ?</p>
        <a href="index.php?route=connexion">Connectez-vous</a>
    </section>
</main>
{% endblock %}